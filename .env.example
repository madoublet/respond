APP_ENV=production
APP_DEBUG=true
APP_KEY=SomeRandomKey!!!

# database configuration (can be ignored)
#DB_CONNECTION=mysql
#DB_HOST=localhost
#DB_PORT=3306
#DB_DATABASE=sample
#DB_USERNAME=sample
#DB_PASSWORD=secret

# site status (Active or Trial)
DEFAULT_STATUS=Active

# trial length (if Trial set above)
TRIAL_LENGTH=30

# activation (Stripe or URL)
ACTIVATION_METHOD=Stripe
ACTIVATION_URL=https://example.com/pay?site={{site}}

# stripe
STRIPE_SECRET_KEY=TEMP
STRIPE_PUBLISHABLE_KEY=TEMP
STRIPE_PLAN=TEMP
STRIPE_AMOUNT=2000
STRIPE_NAME="Monthly Subscription"
STRIPE_DESCRIPTION="$20 per month"
#STRIPE_CURRENCY=USD

# white label
LOGO_URL=/assets/resources/respond-logo.png
PRIMARY_COLOR=#00ADE3
PRIMARY_DARK_COLOR=#2F3243
DRAWER_COLOR=#00ADE3
ACKNOWLEDGEMENT="Powered by <a href='https://respondcms.com'>Respond 6</a>. Build fast, responsive sites with Respond CMS."

# advanced lumen customizations
CACHE_DRIVER=memcached
QUEUE_DRIVER=sync

# app settings
BRAND=Respond
APP_URL=autodetect
SITE_URL=autodetect
FRIENDLY_URLS=false
THEMES_LOCATION=themes/
TIMEZONE=America/Chicago
WEBHOOKS_URL=
DEFAULT_LANGUAGE=en

# reCAPTCHA for /create
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# email setup
EMAILS_FROM=sample@sample.com
EMAILS_FROM_NAME='Thomas Rexton'
IS_SMTP=false
SMTP_HOST=smtp.mailserver.com
SMTP_PORT=25
SMTP_AUTH=true
SMTP_USERNAME=username
SMTP_PASSWORD=password
SMTP_SECURE=tls
SMTPENC_KEY=iloverespond

# email subjects
RESET_SUBJECT="Reset Password"
CREATE_SUBJECT="New Site"
FAILED_CHARGE_SUBJECT="Failed Charge"
SUCCESSFUL_CHARGE_SUBJECT="Successful Charge"

# token configuration
JWT_KEY=iloverespond

# on create
PASSCODE=iloverespond

# files
ALLOWED_FILETYPES=jpg,png,gif,pdf
THUMB_MAX_WIDTH=400
THUMB_MAX_HEIGHT=400

# ldap settings
#LDAP_SERVER=domain.ex
#LDAP_DOMAIN=yourdomain
